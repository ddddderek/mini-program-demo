<view class="container">
  <view class="header">
    <view class="search-container">
      <image class="icon" src="images/search.png" />
      <input bind:confirm="onConfirm" placeholder-class='in-bar' placeholder='书籍名' class='bar' auto-focus="true" />
      <image class="cancel-img" src="images/cancel.png" />
    </view>
    <view class='cancel' bind:tap="onCancel">取消</view>
  </view>
    
  <view>
    <view class="history">
      <view class="title">
        <view class="chunk"></view>
        <text>历史搜索</text>
      </view>
      <view class="tags">
          <block wx:for="{{historyWords}}" wx:key="index">
            <v-tag text="{{item}}" />
          </block>
        </view>
    </view>
    <view class="history history-search">
      <view class="title">
        <view class="chunk"></view>
        <text>热门搜索</text>
      </view>
       <view class="tags">
        <block wx:for="{{hotWords}}" wx:key="index">
          <v-tag text="{{item}}" />
        </block>
      </view>
    </view> 
  </view>
</view>
